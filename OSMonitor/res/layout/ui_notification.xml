<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_notification"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="left"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/notification_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/notification_bar" />

    <LinearLayout
        android:id="@+id/notifiction_sys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notification_cpu"
            style="@style/osmonitor_NotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU: ??%" />

        <TextView
            android:id="@+id/notification_mem"
            style="@style/osmonitor_NotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mem: ???MB" />

        <TextView
            android:id="@+id/notification_bat"
            style="@style/osmonitor_NotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bat: ??% (???)" />
    </LinearLayout>

    <ImageView
        android:id="@+id/notification_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/notifiction_sys"
        android:scaleType="fitXY"
        android:src="@drawable/notification_bar" />

    <LinearLayout
        android:id="@+id/notifiction_proc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/notifiction_sys"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notification_top1st"
            style="@style/osmonitor_NotificationText"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notification_top2nd"
            style="@style/osmonitor_NotificationText"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notification_top3nd"
            style="@style/osmonitor_NotificationText"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>

</RelativeLayout>